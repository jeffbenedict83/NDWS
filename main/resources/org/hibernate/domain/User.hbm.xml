<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.NDWS.common.beans">

    <class name="com.NDWS.common.beans.User" table="NDWS_USER">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="username" column="USERNAME" unique-key="true"/>
        <property name="password" column="PASSWORD"/>
        <one-to-one name="userProfile" class="com.NDWS.common.beans.UserProfile"
                    cascade="save-update"></one-to-one>
    </class>
    <query name="tester">
        <![CDATA[
            from NDWS_USER nu where nu.username=:username
        ]]>
    </query>
</hibernate-mapping>