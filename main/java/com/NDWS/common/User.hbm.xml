<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.NDWS.common.beans.User" table="user" catalog="ndws">
        <id name="id" type="java.lang.Long">
            <column name="ID" not-null="true" unique="true"/>
        </id>
        <property name="firstname" type="string">
            <column name="first_name" length="50" not-null="true" unique="false" />
        </property>
        <property name="lastname" type="string">
            <column name="last_name" length="100" not-null="true" unique="false" />
        </property>
        <property name="username" type="string">
            <column name="username" length="50" not-null="true" unique="false" />
        </property>
        <property name="password" type="string">
            <column name="password" length="100" not-null="true" unique="false" />
        </property>
    </class>
</hibernate-mapping>